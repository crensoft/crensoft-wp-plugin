{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "esnext",
		"target": "es6",
		"jsx": "react",
		"jsxFactory": "wp.element.createElement",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"isolatedModules": false,
		"strict": true,
		"rootDirs": ["src"],
		"declaration": true
		// "baseUrl": "./src",
		// "paths": {
		// 	"@pixor/*": ["packages/*"]
		// 	// "packages/*": ["packages/*"]
		// }
	},
	"include": ["./src/**/*"],
	"filesGlob": ["./src/**/*.d.ts"],
	"exclude": ["node_modules", "dist", "config", "scripts"],
	"awesomeTypescriptLoaderOptions": {
		"useCache": true
	}
}
